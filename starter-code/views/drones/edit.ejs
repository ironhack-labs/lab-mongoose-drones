<h2>Edit Drone</h2>

<form method="post" action="/drones/<%- drone._id %>/edit">
  <div class="form-group">
    <label for="drone-name"> Model Name: </label>
    <input type="text" name="droneName" id="drone-name" class="form-control" value="<%= drone.droneName %>">
  </div>

  <div class="form-group">
    <label for="propellers"> Propellers: </label>
    <input type="number" name="propellers" id="propellers" class="form-control" value="<%= drone.propellers %>">
  </div>

  <div class="form-group">
    <label for="max-speed"> Maximum Speed (meters per second): </label>
    <input type="number" name="maxSpeed" id="max-speed" class="form-control" value="<%= drone.maxSpeed %>">
  </div>

  <div class="form-group">
    <label for="image"> Image URL (meters per second): </label>
    <input type="text" name="image" id="image" class="form-control" value="<%= drone.image %>">
  </div>

  <button class="btn btn-success"> Submmit changes </button>
</form>
